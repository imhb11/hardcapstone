<!-- item_message_other.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/userIcon"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:src="@drawable/chatting_profileimage_background" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영화 소모임 회장님"
            android:textSize="22sp"
            android:textColor="#BAA681"
            android:layout_marginBottom="4dp"/>
        <!--        android:fontFamily="@font/inria_sans_bold"-->

        <LinearLayout
            android:layout_width="253dp"
            android:layout_height="71dp"
            android:background="@drawable/message_other"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/messageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:text="무지개"
                android:textSize="13sp"
                android:textColor="#6A542B"/>
            <!--            android:fontFamily="@font/inria_sans_regular"-->
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/messageTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:08"
        android:textSize="12sp"
        android:textColor="#BAA681"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"/>
</LinearLayout>
